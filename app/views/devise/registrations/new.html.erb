<%= render 'shared/static_header' %>

<section id="static_signup" class='container'>
  <h1 class='user_settings text-center top-padding-150'>SIGNUP WITH BEAMDOX</h1>
  <%= devise_error_messages! %>

  <%= form_for(resource, as: resource_name, url: registration_path(resource_name), data: {toggle: 'validator'}, html: {class: 'form-horizontal'}) do |f| %>

  
  
  <div class="form-group">
    <div class="row">
      <%= f.label :name , :class => 'col-xs-10 col-xs-offset-1 col-sm-2 col-sm-offset-3 control-label'%>
    </div>
    <div class="row">
      <div class="col-xs-10 col-xs-offset-1 col-sm-6 col-sm-offset-3">
        <%= f.text_field :name, :class => 'form-control', :placeholder => "Full Name", :required => true %>
        <div class="help-block with-errors"></div>
      </div>
    </div>
  </div>

  <div class="form-group">
    <div class="row">
      <%= f.label :email , :class => 'col-xs-10 col-xs-offset-1 col-sm-2 col-sm-offset-3 control-label'%>
    </div>
    <div class="row">
      <div class="col-xs-10 col-xs-offset-1 col-sm-6 col-sm-offset-3">
        <%= f.email_field :email, :class => 'form-control', :placeholder => "Email Address", :required => true, :pattern => '[^@]+@[^@]+\.[a-zA-Z]{2,6}'%>
        <div class="help-block with-errors text-left">Please follow a standard email format (e.g., 'brian@gmail.com').</div>
      </div>
    </div>
  </div>

  <div class="form-group">
    <div class="row">
      <%= f.label :password , :class => 'col-xs-10 col-xs-offset-1 col-sm-2 col-sm-offset-3 control-label'%>
    </div>
    <div class="row">
      <div class="col-xs-10 col-xs-offset-1 col-sm-6 col-sm-offset-3">
       <%= f.password_field :password, :id => 'staticInputPassword', :class => 'form-control', :placeholder => "Password", :required => true, :data => {:minlength => 8} %>
       <div class="help-block with-errors text-left">Minimum of 8 characters</div>
     </div>
   </div>
 </div>

 <div class="form-group">
  <div class="row">
    <%= f.label :password_confirmation , :class => 'col-xs-10 col-xs-offset-1 col-sm-2 col-sm-offset-3 control-label'%>
  </div>
  <div class="row">
    <div class="col-xs-10 col-xs-offset-1 col-sm-6 col-sm-offset-3">
     <%= f.password_field :password_confirmation, :class => 'form-control', :placeholder => "Confirm Password", :required => true, :data => {:match => '#staticInputPassword', :match_error => 'Passwords do not match.'} %>
     <div class="help-block with-errors text-left">Must match the password field</div>
   </div>
 </div>
</div>

<div class="form-group">
  <div class="row">
    <%= f.label :timezone , :class => 'col-xs-10 col-xs-offset-1 col-sm-2 col-sm-offset-3 control-label'%>
  </div>
  <div class="row">
    <div class="col-xs-10 col-xs-offset-1 col-sm-6 col-sm-offset-3">
     <%= f.collection_select :timezone, ActiveSupport::TimeZone.us_zones, :name, :to_s, {}, :class => 'form-control', :required => true %>
   </div>
 </div>
</div>

    <%= f.submit "Sign Up", :class => 'btn btn-primary center-block' %>
    <BR>
    <div class="text-center">OR</div><BR>
    <%= link_to image_tag("fbsignup.jpg", class: 'img-responsive center-block'), user_omniauth_authorize_path(:facebook), class: 'facebook-login' %>
  <%end%>
</section>