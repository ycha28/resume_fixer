<h1>User Profile</h1>
<%= form_for @user, url: profile_path, method: :put do |f| %>
<div class='form-horizontal'>
	<div class='form-group'>
		<%= f.label :name, :class => 'col-md-1 text-right' %>
		<div class='col-md-11'>
			<%= f.text_field :name, :class => 'form-control' %>
		</div>
	</div>
	<div class='form-group'>
		<%= f.label :email, :class => 'col-md-1 text-right' %>
		<div class='col-md-11'>
			<%= f.email_field :email, :class => 'form-control' %>
		</div>
	</div>
	<div class='form-group'>
		<%= f.label :phone_number, :class => 'col-md-1 text-right' %>
		<div class='col-md-11'>
			<%= f.phone_field :phone_number, :class => 'form-control' %>
		</div>
	</div>
	<div class='form-group'>
		<%= f.label :timezone, :class => 'col-md-1 text-right' %>
		<div class='col-md-11'>
			<%= f.collection_select :timezone, ActiveSupport::TimeZone.us_zones, :name, :to_s, {}, :class => 'form-control' %>
		</div>
	</div>
	<%= f.submit "Update Profile", :class => 'btn btn-primary' %>
</div>
<% end %>