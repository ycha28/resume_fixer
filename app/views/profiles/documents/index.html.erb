<section class='documents_index'>
  <%= render 'shared/flash' %>
  <div class='text-center'>
    <h1>My Documents</h1>
  </div>
  <% if @documents.empty? %>
    <div class='text-center'>
      <p>You currently don't have any documents uploaded. <%= link_to "Click here", new_profile_submission_path %> to create a submission.</p>
    </div>
  <% else %>
    <div class='table-responsive'>
      <table class='table'>
        <tr>
          <th>Submitted</th>
          <th>File Type</th>
          <th>File Name</th>
          <th>Review Status</th>
          <th>Comments</th>
        </tr>
        <% @documents.each do |document| %>
          <tr>
            <td><%= document.formatted_created_at %></td>
            <td><%= document.formatted_type.capitalize %></td>
            <td><%= link_to document.original_filename, '#', :data => {:toggle => 'modal', :target => '#preview-modal', :url => "https://docs.google.com/gview?url=#{document.text_file_url}&embedded=true", :title => document.original_filename} %></td>
            <td><%= document.status.capitalize %></td>
            <td><%= link_to 'View', '#', :data => {:toggle => 'modal', :target => '#comments-modal', :user_comments => document.description, :editor_comments => document.feedback} %></td>
          </tr>
        <% end %>
      </table>
    </div>
  <% end %>
</section>

<div class="portfolio-modal modal fade" id="preview-modal">
  <div class="modal-content">
    <div class="close-modal" data-dismiss="modal">
      <div class="lr">
        <div class="rl">
        </div>
      </div>
    </div>
    <div class="container">
        <div class="modal-body">
          <h1 id='document-title'></h1>
          <div class="row">
            <iframe src='' id='embedded-preview' width='1000px' height='800px'></iframe>
          </div>
          <div class='row'>
            <button type="button" class="btn btn-primary" data-dismiss="modal"><i class="fa fa-times"></i> Close</button>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>

<div class="modal fade" id='comments-modal'>
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
        <h4 class="modal-title">Comments</h4>
      </div>
      <div class="modal-body">
        <div id='user-comments'></div>
        <div id='editor-commments'></div>
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
      </div>
    </div>
  </div>
</div>

<% provide(:title, "My Documents") %>