<section class="row">
  <section class="col-md-12">
    <%= render 'shared/flash' %>
    <h1>Documents</h1>
    <%= link_to "Submit a new document", new_profile_submission_path %>
    <% @documents.each do |document| %>
      <h4><%= document.original_filename %></h4>
      <strong>Type:</strong> <%= document.formatted_type %><br>
      <strong>Link:</strong> <%= document.text_file_url %><br>
      <% if document.description.present? %>
        <p>
          <%= document.description %>
        </p>
      <% end %>
    <% end %>
  </section>
</section>

<% provide(:title, "My Documents") %>